sudo nft add table ip filter
sudo nft add chain ip filter input { type filter hook input priority 0 \; }
sudo nft add rule ip filter input tcp dport 10000-12345 counter log prefix "TRACE: " flags all
sudo nft add rule ip filter input tcp dport 10000-12345 meta nftrace set 1

//Запуск сервера
nc -l 127.0.0.2 10000

//Пакет TCP
echo -n "Hello, TCP Server!" | nc 127.0.0.2 10000

